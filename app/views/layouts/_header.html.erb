<body id='project' class='two_columns'>
<div id="fb-root"></div>
	<%= fboauth_connect_async_js('131541183544567') %>
	<div class="top-nav">
		<ul>
			<li><a href="/about">About Us</a></li>
			<li><a href="http://blog.volunteerbig.com/">Blog</a></li>
			<li><a href="/faq">FAQ</a></li>
			<li><a href="/contact-us">Contact Us</a></li>
			<li>
			<% if logged_in? %>	
			 <%= link_to 'Logout', logout_path %>
			<% else %>
			 <%= fboauth_login_and_redirect 'http://cvb.socialsync.org/facebook_sessions/create', {:text => 'Login / Signup', :perms => 'email'} -%>
			<% end %>
			</li>
		</ul>
	</div>
	<div class="wrapper">
		<div id="header">
			<h1 class="logo"><%= link_to 'Volunteer BIG', root_path %></h1>
			<div class="nav-holder">
				<ul id="nav">
					<li class="<%= menu_highlight_class(request.path, /^\/$/)%>"><%= link_to 'home', root_path %></li>
					<li class="<%= menu_highlight_class(request.path, /events/)%>"><%= link_to 'take action', events_path %></li>
					<li class="<%= menu_highlight_class(request.path, /users/)%>"><%= link_to 'meet volunteers', users_path %></li>
					<li class="<%= menu_highlight_class(request.path, /organizations/)%>"><%= link_to 'non-profits', organizations_path %></li>
					<li class="<%= menu_highlight_class(request.path, /discussions/)%>"><%= link_to 'discussions', discussions_path %></li>					
				</ul>
			</div>
		</div><!--header-->
		<div id="main">
			<% if flash[:notice] or flash[:error] %>
			<div class="main-block">
				<div class="t">&nbsp;</div>
				<div class="c">
					<div class="user-info">
						<!--<div class="avatara"><a href="#"><img src="images/img40.jpg" alt="#" /></a></div> -->
						<h2><%= flash[:notice] or flash[:error] %></h2>
						<!--<p>The Newbie Badge will be your first badge. Get it and you  unlock the ability to acquire all other badges.</p>-->
					</div>
				</div>
				<div class="b">&nbsp;</div>
			</div><!--main-block-->
			<% end %>
			
