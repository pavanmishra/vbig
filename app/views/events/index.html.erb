<h1>Events</h1>

<form>
	<ul>
	<li>
		Search For<br />
		<%= text_field_tag 'search', 'education,environment' %>
	</li>
	<li>
		Near <br />
		<%= text_field_tag 'near', 'borivali,mumbai' %>
	</li>
	</ul>
	<%= submit_tag 'Search' %>
</form>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Address</th>
    <th>Lat</th>
    <th>Lng</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.title %></td>
    <td><%=h event.description %></td>
    <td><%=h event.address %></td>
    <td><%=h event.lat %></td>
    <td><%=h event.lng %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New event', new_event_path %>