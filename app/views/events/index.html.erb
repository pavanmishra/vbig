<h1>Events</h1>

<form>
	<ul>
	<li>
		Search For<br />
		<%= text_field_tag 'search', 'education,environment' %>
	</li>
	<li>
		Near <br />
		<%= text_field_tag 'near', 'borivali,mumbai' %>
	</li>
	</ul>
	<%= submit_tag 'Search' %>
</form>
<h2> Causes </h2>
<ul>
	<% Event.cause_counts.each do |cause_tag| %>
		<li> <%= link_to cause_tag.name, :controller => :events, :action => :filter_by_tag, :tag_type => 'cause', :tag_name => cause_tag.name %> </li>
	<% end %>
</ul>
<h2> Skills </h2>
<ul>
	<% Event.skill_counts.each do |skill_tag| %>
		<li> <%= link_to skill_tag.name, :controller => :events, :action => :filter_by_tag, :tag_type => 'skill', :tag_name => skill_tag.name %> </li>
	<% end %>
</ul>
<div id="map" style="width:100%;height:300px">
	
</div>
<% unless @events.blank? %>
<script type="text/javascript">
    var latlng = new google.maps.LatLng(0, 0);
    var myOptions = {
      zoom: 1,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map"), myOptions);
	<% for event in @events %>
	var latlng = new google.maps.LatLng(<%= event.lat %>,<%= event.lng %>)
	var marker = new google.maps.Marker({
	      position: latlng,
	      title:"<%= event.title %>",
		  map: map
	  });
	<% end %>
</script>
<% end %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Address</th>
    <th>Lat</th>
    <th>Lng</th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%=h event.title %></td>
    <td><%=h event.description %></td>
    <td><%=h event.address %></td>
    <td><%=h event.lat %></td>
    <td><%=h event.lng %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

