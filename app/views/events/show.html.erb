
<h1><%= @title %></h1>
<div id='content'>
<div id='left'> 


<div class='module'> 
    <div class='head'> 
        <h3></h3> 
    </div> 
    <div class='body'>
<p>
  <b>Title:</b>
  <%=h @event.title %>
</p>
<p>
	<b> Organization: </b>
	<%= link_to @event.organization, @event.organization %>
</p>
<p>
  <b>Description:</b>
  <%=h @event.description %>
</p>

<p>
  <b>Address:</b>
  <%=h @event.address %>
</p>
<div id="map" style="width:100%;height:300px">
	
</div>
<script type="text/javascript">
    var latlng = new google.maps.LatLng(<%= @event.lat %>, <%= @event.lng %>);
    var myOptions = {
      zoom: 10,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map"), myOptions);
    var latlng = new google.maps.LatLng(<%= @event.lat %>, <%= @event.lng %>);
	var marker = new google.maps.Marker({
	      position: latlng,
	      title:"Hello World!",
		  map: map
	  });

</script>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
<% if logged_in? and !current_user.participating?(@event) %>| <%= link_to 'Participate', participate_event_path(@event), :method => :post %>	<% end %>	
    </div>
</div><!-- /.module #requests -->
<div class='module'> 
    <div class='head'> 
        <h3>Participants</h3> 
    </div> 
    <div class='body'>
		<ul>
		<% for user in @event.users %>
			<li> <%= user.name %></li>
		<% end %>
		</ul>
	</div>
</div><!-- /.module #requests -->	
<% if logged_in? %>
<div class='module'> 
    <div class='head'> 
        <h3>Invite Others</h3> 
    </div> 
    <div class='body'>
		<p>
			Use the following links to invite other interested people to this event.
		</p>
		<% form_tag '/contacts/import/', :method => :post do %>
			<textarea id="recipient_list" name="recipients"></textarea>

			<a href="#" onclick="showPlaxoABChooser('recipient_list', '/contacts/plaxo_cb'); return false"><img src="http://www.plaxo.com/images/abc/buttons/add_button.gif" alt="Add from my address book" /></a>

			<input type="submit" value="Invite"/>
		<% end %>
		<% bitly = Bitly.new('pavanmishra', 'R_834a919ea8d7c84232ab7bb83d9e31db')%>
		<h3> Invite on Twitter</h3>
		<div>
			<p>
				<%= twitter_message = "Follow #{link_to bitly.shorten(join_by_invitation_url(@invites.first.code)).short_url,  bitly.shorten(join_by_invitation_url(@invites.first.code)).short_url} to attend '#{@event.title}' at VolunteerBig, do good, have fun and win prizes." %>

			</p>
			<p>
				<a href="http://twitter.com/?status=<%= URI.escape(twitter_message)%>" target="_blank">Share on Twitter</a>
			</p>
		</div>
		<h3> Invite on Facebook </h3>
		<div>
			<p>
				<%= facebook_message = "Attend a VolunteerBig event '#{@event.title}' by following the url #{link_to bitly.shorten(join_by_invitation_url(@invites.last.code)).short_url, bitly.shorten(join_by_invitation_url(@invites.last.code)).short_url  }" %>
				
			</p>
			<p>
				<a target="_blank" href="http://www.facebook.com/sharer.php?u=<%= URI.escape(join_by_invitation_url(@invites.last.code)) -%>&t=Attend <%= @event.title %> at VolunteerBig, do good, have fun and win prizes">Share on Facebook</a>
			</p>
		</div>
	</div>
</div><!-- /.module share links -->	
<% end %>
	