
<h1><%= @title %></h1>
<div id='content'>
<div id='left'> 


<div class='module'> 
    <div class='head'> 
        <h3></h3> 
    </div> 
    <div class='body'>
<p>
  <b>Title:</b>
  <%=h @event.title %>
</p>

<p>
  <b>Description:</b>
  <%=h @event.description %>
</p>

<p>
  <b>Address:</b>
  <%=h @event.address %>
</p>
<div id="map" style="width:100%;height:300px">
	
</div>
<script type="text/javascript">
    var latlng = new google.maps.LatLng(<%= @event.lat %>, <%= @event.lng %>);
    var myOptions = {
      zoom: 10,
      center: latlng,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };
    var map = new google.maps.Map(document.getElementById("map"), myOptions);
    var latlng = new google.maps.LatLng(<%= @event.lat %>, <%= @event.lng %>);
	var marker = new google.maps.Marker({
	      position: latlng,
	      title:"Hello World!",
		  map: map
	  });

</script>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
<% if logged_in? and !current_user.participating?(@event) %>| <%= link_to 'Participate', participate_event_path(@event), :method => :post %>	<% end %>	
    </div>
</div><!-- /.module #requests -->
<div class='module'> 
    <div class='head'> 
        <h3>Participants</h3> 
    </div> 
    <div class='body'>
		<ul>
		<% for user in @event.users %>
			<li> <%= user.name %></li>
		<% end %>
		</ul>
	</div>
</div><!-- /.module #requests -->	
	