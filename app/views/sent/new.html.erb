<div class="content-box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h2>Compose</h2>
		</div><!--title-->
		To:<br />
		<input type="text" id="autocomplete" name="autocomplete_parameter"/>
		<span id="indicator1" style="display: none">
		  <img src="/images/spinner.gif" alt="Working..." />
		</span>
		<div id="autocomplete_choices" class="autocomplete"></div>
		<script>
		new Ajax.Autocompleter("autocomplete", "autocomplete_choices", "/editors", {
		  paramName: "value", 
		  minChars: 2, 
		  indicator: 'indicator1',
		  afterUpdateElement: function(text, li){
			$('message_to_').value = li.id;
		}
		});
		</script>
		
		<% form_for :message, :url => {:controller => "sent", :action => "create"} do |f| %>

  		<p>
			<%= hidden_field_tag 'message[to][]'%>
		</p>

  		<p>Subject: <br /><%= f.text_field :subject %></p>
  		<p>Body:<br /> <%= f.text_area :body %></p>
  		<p><%= submit_tag "Send" %></p>
		<% end %>
		</div>
		<div class="b">&nbsp;</div>		
	</div><!--content-box-->
	<% content_for :sidebar do %>
	<div class="box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h3>Inbox</h3>
		</div>
		<div>
			<%= link_to 'Compose', :controller => :sent, :action => :new %><br />
			<%= link_to 'Received', :controller => :received, :action => :index %><br />
			<%= link_to 'Sent', :controller => :sent, :action => :index %>
		</div>	
	</div>
	<div class="b">&nbsp;</div>
	</div>

	
	<div class="box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h3>Contests</h3>
		</div>
		<div class="promo-visual"><a href="/contest.html"><img width="151" alt="" src="http://www.pc.ibm.com/ca/nba/images/nba_cares_140x187.jpg"></a></div>
	</div>
	<div class="b">&nbsp;</div>
	</div>

	<% end %>	
	