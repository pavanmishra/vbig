<% form_for(@event_user, :url => {:action => :update, :id => @event_user}) do |f| %>
	<p>
		Did you attend this event? <br />
		<%= f.radio_button :attended, true %>Yes 
		<%= f.radio_button :attended, false %>No
	</p>	
	<p>
		<%= f.text_field :hours %> hours
	</p>
	<h3> I feel different having participated because.</h3>
	<h3> I was not able to attend because.</h3>
	<p>
		<%= f.text_area :comment %>
	</p>	
	
	<%= f.submit 'Submit'%>
<% end %>