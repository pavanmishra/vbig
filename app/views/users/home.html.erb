<div class="content-box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h2 class="blue">Volunteer</h2>
		</div><!--title-->
		<div class="cart-info">
			<div class="holder">
				<div class="visual"><img src="/images/img32.jpg" alt="" /></div>
				<div class="cart-text">
					<h3><%= @user.name %></h3>
					<div class="dc"><%= @user.address %></div>
					<ul class="social">
						<li class="facebook"><a href="#">www.facebook.com/kofman.foundation</a></li>
						<li class="twitter"><a href="#">@ koufmanfoundation</a></li>
					</ul>
					<div class="row"><strong class="even"><%= @user.badges.count %> badges</strong><a href="#" class="suggest-btn">Suggest a skill</a></div>
				</div>
			</div>
			<ul class="effected">
				<li><strong>causes effected:</strong> <%= @user.causes.collect{|cause_tag| cause_tag.name.titleize}.join(', ') %></li>
				<li><strong>skills sought:</strong>  <%= @user.skills.collect{|skill_tag| skill_tag.name.titleize}.join(', ') %></li>
			</ul>
		</div>
	</div>
	<div class="b">&nbsp;</div>		
</div><!--content-box-->
<div class="content-box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h2>suggested opportunities</h2>
			<a href="#" class="view orang-link">view all</a>
		</div><!--title-->
		<%= render :partial => 'events/event', :collection => @user.suggested_events(1)%>
			
	</div>
	<div class="b">&nbsp;</div>		
</div><!--content-box-->

<% content_for :sidebar do %>
	<div class="box">
		<div class="t">&nbsp;</div>
		<div class="c">
			<div class="title">
				<h3>tutorial</h3>
			</div>
			<p>
			<%= link_to 'Start', {:controller => :tutorial, :action => :step_one}, :class=>'lbOn' %> your time, commitment to recruit new people. 	
			<%= link_to 'Step 2', {:controller => :tutorial, :action => :step_two}, :class=>'lbOn' %> 
			</p>	
		</div>
		<div class="b">&nbsp;</div>
	</div><!--box-->
	<div class="box">
		<div class="t">&nbsp;</div>
		<div class="c">
			<div class="title">
				<h3>pledges</h3>
			</div>
			<p>
			<%= link_to 'Pledge', pledges_path %> your time, commitment to recruit new people. 	
			</p>	
		</div>
		<div class="b">&nbsp;</div>
	</div><!--box-->
<% end %>
