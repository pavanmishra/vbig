<h1>Listing users</h1>

<form>
	<ul>
	<li>
		Search For<br />
		<%= text_field_tag 'search', 'education,environment' %>
	</li>
	<li>
		Near <br />
		<%= text_field_tag 'near', 'borivali,mumbai' %>
	</li>
	</ul>
	<%= submit_tag 'Search' %>
</form>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Lat</th>
    <th>Lng</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.first_name %></td>
    <td><%=h user.last_name %></td>
    <td><%=h user.lat %></td>
    <td><%=h user.lng %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>