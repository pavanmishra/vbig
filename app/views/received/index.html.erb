<div class="content-box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h2>Received Messages</h2>
			<a href="#" class="view">view all</a>
		</div><!--title-->

		<%= will_paginate @messages %>
		<table border="1">
  			<tr>
    			<th>From</th>
    			<th>Subject</th>
    			<th>Received</th>
  			</tr>
  
  			<% for message in @messages %>
    		<tr>
      			<td><%=h message.author.login %></td>
      			<td><%= link_to h(message.subject), :controller => :received, :action => :show, :id => message %></td>
      			<td><%= distance_of_time_in_words(message.created_at, Time.now) %> ago</td>
    		</tr>
  			<% end %>
		</table>

		<%= will_paginate @messages %>
		</div>
		<div class="b">&nbsp;</div>		
	</div><!--content-box-->
	<% content_for :sidebar do %>
	<div class="box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h3>Inbox</h3>
		</div>
		<div>
			<%= link_to 'Compose', :controller => :sent, :action => :new %><br />
			<%= link_to 'Received', :controller => :received, :action => :index %><br />
			<%= link_to 'Sent', :controller => :sent, :action => :index %>
		</div>	
	</div>
	<div class="b">&nbsp;</div>
	</div>


	<div class="box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h3>Contests</h3>
		</div>
		<div class="promo-visual"><a href="/contest.html"><img width="151" alt="" src="http://www.pc.ibm.com/ca/nba/images/nba_cares_140x187.jpg"></a></div>
	</div>
	<div class="b">&nbsp;</div>
	</div>

	<% end %>	
	