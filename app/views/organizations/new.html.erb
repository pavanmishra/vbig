
<h1><%= @title %></h1>
<div id='content'>
<div id='left'> 

<div class='module'> 
    <div class='head'> 
        <h3></h3> 
    </div> 
    <div class='body'>
	<% @title = 'New Organization' %>
	<% form_for(@organization, :html => {:multipart => true}) do |f| %>
  	<%= f.error_messages %>

  	<p>
    	<%= f.label :name %><br />
    	<%= f.text_field :name %>
  	</p>
  	<p>
    	<%= f.label :description %><br />
    	<%= f.text_area :description %>
  	</p>
  	<p>
    	<%= f.label :address %><br />
    	<%= f.text_field :address %>
  	</p>

  <p>
    <%= f.label :skills %><br />
	<%#= render :partial => 'common/tag_checkboxes', :locals => {:items => default_skills, :item_name => 'skills', :object_items => @event.skills.collect{|skill| skill.name}}%>
	<%= render :partial => 'users/skill_select', :locals => {:checked => @organization.skills.collect{|skill| skill.name} }%>

	Others(comma separated) <br />
	<%= text_field_tag 'other_skills' %>

  </p>
  <p>
    <%= f.label :causes %><br />
	<%#= render :partial => 'common/tag_checkboxes', :locals => {:items => default_causes, :item_name => 'causes', :object_items => @event.causes.collect{|cause| cause.name}}%>
	<%= render :partial => 'users/cause_select', :locals => {:checked => @organization.skills.collect{|skill| skill.name} }%>

	Others(comma separated) <br />
	<%= text_field_tag 'other_causes' %>

  </p>
  	<p>
		<%= f.label :image, "Photo" %>
		<%= f.file_field :image %>
  	</p>
  	<p>
    	<%= f.submit 'Create' %>
  	</p>
	<% end %>

	<%= link_to 'Back', organizations_path %>
	</div>
</div>	