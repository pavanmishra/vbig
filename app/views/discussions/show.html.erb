<div class="content-box">
	<div class="t">&nbsp;</div>
	<div class="c">
		<div class="title">
			<h2 class="blue">discussion</h2>
		</div><!--title-->
		
		<div class="cart-info">
				<div class="text-info">
					<h2><%= @discussion.title %></h2><br clear="all" />
					<div class="dc"><%= @discussion.address %>, <%= @discussion.created_at.to_date %></div>
					<div class="about-info"><p><%= @discussion.description %></p></div>				</div>
			<ul class="effected">
				<li><strong>causes effected:</strong> <%= @discussion.causes.collect{|cause_tag| cause_tag.name.titleize}.join(', ') %></li>
			</ul>
			<div id="comments_container">
				<h4 style="border-bottom:1px dotted;font-size:1.4em;padding:1em 0;"> <%= @discussion.comments.count %> Comments </h4>
				
			   <%= render_threaded_comments(@discussion.comments) -%>
			<% if logged_in? %>
			   <%= render_comment_form(@new_comment)  -%>
			<% end %>
			 </div>
			
		</div>
	</div>
	<div class="b">&nbsp;</div>		
</div><!--content-box-->
