<h1>Editing badge</h1>

<% form_for(@badge) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>

  <p>
	<%= f.label :photo, "Photo" %>
	<%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @badge %> |
<%= link_to 'Back', badges_path %>